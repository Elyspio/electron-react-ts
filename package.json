{
	"name": "media-tools",
	"version": "0.0.4",
	"description": "template for Electron with ReactJs rendering in TypeScript",
	"main": "./dist/main.js",
	"scripts": {
		"build-main": "cross-env NODE_ENV=production webpack --config config/webpack.main.prod.config.js",
		"build-renderer": "cross-env NODE_ENV=production webpack --config config/webpack.renderer.prod.config.js",
		"build": "npm run build-main && npm run build-renderer",
		"start-renderer-dev": "webpack-dev-server --config config/webpack.renderer.dev.config.js",
		"start-main-dev": "webpack --config config/webpack.main.config.js && nodemon  -e ts,json --watch src/main -x \"electron ./dist/main.js\"",
		"start-dev": "cross-env START_HOT=1 npm run start-renderer-dev",
		"prestart": "npm run build",
		"start": "electron .",
		"postinstall": "electron-builder install-app-deps",
		"release": "npm run build && electron-builder -wl"
	},
	"build": {
		"productName": "Media Tools",
		"appId": "fr.elyspio.media-tools",
		"directories": {
			"output": "release"
		},
		"files": [
			"dist/",
			"node_modules/",
			"package.json"
		],
		"linux": {
			"target": "deb"
		},
		"win": {
			"target": "nsis"
		}
	},
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com:Elyspio/media-tools.git"
	},
	"author": {
		"name": "Jonathan Guichard",
		"email": "jona.guich69@gmail.com"
	},
	"license": "MIT",
	"devDependencies": {
		"@babel/core": "^7.10.4",
		"@babel/plugin-proposal-class-properties": "^7.10.4",
		"@babel/plugin-proposal-decorators": "^7.10.4",
		"@babel/polyfill": "^7.10.4",
		"@babel/preset-env": "^7.10.4",
		"@babel/preset-react": "^7.10.4",
		"@babel/preset-typescript": "^7.10.4",
		"@hot-loader/react-dom": "^16.13.0",
		"@types/electron-devtools-installer": "^2.2.0",
		"@types/material-ui": "^0.21.7",
		"@types/react": "^16.9.41",
		"@types/react-dom": "^16.9.8",
		"@types/react-redux": "^7.1.9",
		"@types/react-router-dom": "^5.1.5",
		"@types/react-test-renderer": "^16.9.2",
		"@types/redux-logger": "^3.0.8",
		"@types/webpack-env": "^1.15.2",
		"@types/xml2js": "^0.4.5",
		"babel-loader": "^8.1.0",
		"cross-env": "^7.0.2",
		"css-loader": "^3.6.0",
		"electron": "^9.1.0",
		"electron-builder": "^22.7.0",
		"electron-devtools-installer": "^3.1.0",
		"file-loader": "^6.0.0",
		"fork-ts-checker-webpack-plugin": "^4.1.3",
		"html-webpack-plugin": "^4.3.0",
		"image-webpack-loader": "^6.0.0",
		"node-sass": "^4.14.1",
		"nodemon": "^2.0.4",
		"prettier": "^2.0.5",
		"react-hot-loader": "^4.12.21",
		"react-test-renderer": "^16.13.1",
		"redux-devtools-extension": "^2.13.8",
		"redux-logger": "^3.0.6",
		"sass-loader": "^8.0.2",
		"source-map-loader": "^1.0.1",
		"spectron": "^11.0.0",
		"style-loader": "^1.2.1",
		"typescript": "^3.9.6",
		"webpack": "^4.43.0",
		"webpack-cli": "^3.3.12",
		"webpack-dev-server": "^3.11.0",
		"webpack-merge": "^4.2.2"
	},
	"dependencies": {
		"@material-ui/core": "^4.11.0",
		"@material-ui/icons": "^4.9.1",
		"@reduxjs/toolkit": "^1.4.0",
		"fs-extra": "^9.0.1",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-redux": "^7.2.0",
		"react-router-dom": "^5.2.0",
