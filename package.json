{
	"version": "0.90.0",
	"name": "elytools",
	"main": "./app/dist/main.js",
	"scripts": {
		"build-main": "cross-env NODE_ENV=production webpack --config config/webpack.main.prod.config.js",
		"build-renderer": "cross-env NODE_ENV=production webpack --config config/webpack.renderer.prod.config.js",
		"build": "npm run build-main && npm run build-renderer",
		"start-renderer-dev": "webpack-dev-server --config config/webpack.renderer.dev.config.js",
		"start-main-dev": "webpack --config config/webpack.main.config.js && nodemon  -e ts,json --watch app/src/main -x \\\"electron ./app/dist/main.js\\\"",
		"start-dev": "cross-env START_HOT=1 npm run start-renderer-dev",
		"prestart": "npm run build",
		"start": "electron app",
		"postinstall": "electron-builder install-app-deps",
		"release": "ts-node config/release.ts"
	},
	"build": {
		"productName": "Elytools",
		"appId": "fr.elyspio.elytools",
		"directories": {
			"app": "app",
			"output": "release",
			"buildResources": "config/build-config"
		},
		"linux": {
			"target": "deb"
		},
		"win": {
			"target": "nsis"
		}
	},
	"author": {
		"name": "Jonathan Guichard",
		"email": "jona.guich69@gmail.com"
	},
	"license": "MIT",
	"devDependencies": {
		"@babel/core": "^7.15.8",
		"@babel/plugin-proposal-class-properties": "^7.14.5",
		"@babel/plugin-proposal-decorators": "^7.15.8",
		"@babel/plugin-proposal-private-property-in-object": "^7.15.4",
		"@babel/plugin-transform-typescript": "^7.15.8",
		"@babel/polyfill": "^7.12.1",
		"@babel/preset-env": "^7.15.8",
		"@babel/preset-react": "^7.14.5",
		"@babel/preset-typescript": "^7.15.0",
		"babel-loader": "^8.2.3",
		"cross-env": "^7.0.3",
		"css-loader": "^3.6.0",
		"electron": "^15.3.0",
		"electron-builder": "^22.13.1",
		"file-loader": "^6.2.0",
		"fork-ts-checker-webpack-plugin": "^4.1.6",
		"html-webpack-plugin": "^4.5.2",
		"image-webpack-loader": "^7.0.1",
		"redux-devtools-extension": "^2.13.9",
		"redux-logger": "^3.0.6",
		"sass": "1.43.3",
		"sass-loader": "^8.0.2",
		"source-map-loader": "^1.1.3",
		"style-loader": "^1.3.0",
		"ts-node": "^10.4.0",
		"typescript": "latest",
		"webpack": "^4.44.1",
		"webpack-cli": "^3.3.12",
		"webpack-dev-server": "^3.11.2",
		"webpack-merge": "^5.8.0",
		"prettier": "^2.4.1",
		"fs-extra": "^10.0.1",
		"axios": "^0.26.0",
		"nodemon": "^2.0.15"
	}
}